<div class="row center">
    <div class="col-md-12">
        <%= form_for(:session, url: login_path) do |f| %>
    </div>
    <% if logged_in? %>
        <div class="col-md-12 space">
            <h1>Welcom <%= current_user.first_name %></h1>
        </div> 
    <% else %>
        <div class="col-md-12 space">
            <h1>Welcom user</h1>
        </div>
    <% end %>
    <div class="col-md-10 space" id="search_bar">
        <%= f.text_field :email, :placeholder => "keyword" %>
    </div>
    <div class="col-md-2 space">
        <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
        <% end %>
</div>
