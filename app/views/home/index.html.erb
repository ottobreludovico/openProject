<div ng-controller="ProjectsCtrl">

    <div class="row center">
        <div class="space col-md-12">
            <div class="row">
                <div class="space col-md-12" id="search_bar">
                    <div class="row">
                        <div class="col-md-10">
                        <input type="text" id="search" placeholder="Keyword" />
                        </div>
                        <div class="col-md-2">
                            <button ng-click='searchProject()' class = "bg-dark">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="project in projects">
              <td> {{project.title}} </td>
              <td> {{project.teamleader_id}} </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

</div>






