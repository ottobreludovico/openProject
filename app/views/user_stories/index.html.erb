<p id="notice"><%= notice %></p>

<h1>User Stories</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Creator</th>
      <th>Worker</th>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_stories.each do |user_story| %>
      <tr>
        <td><%= user_story.project %></td>
        <td><%= user_story.creator %></td>
        <td><%= user_story.worker %></td>
        <td><%= user_story.title %></td>
        <td><%= user_story.description %></td>
        <td><%= user_story.deadline %></td>
        <td><%= user_story.state %></td>
        <td><%= link_to 'Show', user_story %></td>
        <td><%= link_to 'Edit', edit_user_story_path(user_story) %></td>
        <td><%= link_to 'Destroy', user_story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Story', new_user_story_path %>
