<!DOCTYPE html>
<html>
  <head>
    <title>OpenProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--css/scss-->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!--javascript-->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>



  <body> 
    <%= render 'layouts/header' %>
    <div class="container">
   
      <% if notice %>
        <%= content_tag :p, notice, :class => "alert alert-success" if notice.length > 0 %>
      <% end %>
      <% if alert %>
        <%= content_tag :p, alert, :class => "alert alert-danger" if alert.length > 0 %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>